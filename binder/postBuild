#!/bin/bash
cpanm --local-lib=~/perl5 local::lib && eval $(perl -I ~/perl5/lib/perl5/ -Mlocal::lib)
cpanm --force IO::Async

cpanm inc::Module::Install
cpanm Module::Install::AuthorTests
cpanm Module::Install::CheckLib
cpanm Module::Install::XSUtil
wget -O - https://raw.githubusercontent.com/zmughal-p5CPAN/p5-Alt-Alien-ZMQ-Alien-ZMQ-latest/master/maint/install-zmq-libzmq.pl | perl - --notest Alt::Alien::ZMQ::Alien::ZMQ::latest ZMQ::LibZMQ3 Net::Async::ZMQ 

cpanm ZMQ::Constants
cpanm Task::Weaken
cpanm Test::Fatal
cpanm Test::SharedFork
cpanm Test::TCP@1.08

git clone https://github.com/lestrrat/p5-ZMQ.git
cd p5-ZMQ
cd ZMQ-LibZMQ3
perl -Minc::Module::Install -Mlocal::lib tools/genfiles.pl
perl -Minc::Module::Install -Mlocal::lib Makefile.PL
make
make install

cpanm Markdent@0.26 Markdown::Pod@0.006
cpanm --notest Devel::IPerl

jupyter --data-dir
cd ~
mkdir .local
mkdir .local/share
mkdir .local/share/jupyter
timeout 30 iperl notebook

python ~/binder/set_envs.py .local/share/jupyter/kernels/iperl/kernel.json ~/binder/perl_env
cat .local/share/jupyter/kernels/iperl/kernel.json

mkdir ~/.local/R_libs
export R_LIBS=~/.local/R_libs/ 
R -e ".libPaths()";
R --quiet -e "install.packages(c('repr', 'IRdisplay', 'evaluate', 'crayon', 'pbdZMQ', 'devtools', 'uuid', 'digest'),repos = 'http://cran.us.r-project.org')"
R --quiet -e "devtools::install_github('IRkernel/IRkernel')"
R --quiet -e "IRkernel::installspec()"
R --quiet -e "install.packages(c('ggplot2','ggrepel'),repos = 'http://cran.us.r-project.org')"

python ~/binder/set_envs.py ~/.local/share/jupyter/kernels/ir/kernel.json ~/binder/r_env 


python -m bash_kernel.install

mkdir ~/Research
mkdir ~/Research/Data/
cd ~/Research/Data
git clone https://github.com/UniversalDependencies/UD_English-EWT.git


